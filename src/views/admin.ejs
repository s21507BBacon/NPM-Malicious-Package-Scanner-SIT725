<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1>Admin Page: Add Malicious Package</h1>

        <form action="/admin/add-package" method="POST">
            <div class="mb-3">
                <label for="packageName" class="form-label">Package Name</label>
                <input type="text" class="form-control" id="packageName" name="packageName" placeholder="Enter malicious package name" required>
            </div>
            <button type="submit" class="btn btn-primary">Add Package</button>
        </form>

        <h3 class="mt-4">Malicious Packages List:</h3>
        <ul>
            <% if (maliciousPackages && maliciousPackages.length > 0) { %>
                <% maliciousPackages.forEach(function(package) { %>
                    <li><%= package %></li>
                <% }); %>
            <% } else { %>
                <li>No malicious packages added yet.</li>
            <% } %>
        </ul>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>